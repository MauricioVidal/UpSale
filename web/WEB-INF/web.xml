<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServletLogar</servlet-name>
        <servlet-class>br.com.upsale.servlets.ServletLogar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogar</servlet-name>
        <url-pattern>/logar</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ServletCadastroProduto</servlet-name>
        <servlet-class>br.com.upsale.servlets.ServletCadastroProduto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletCadastroProduto</servlet-name>
        <url-pattern>/cadastro_produto</url-pattern>
    </servlet-mapping>
    
   <servlet>
        <servlet-name>ServletAtualizacaoProdutoSelecao</servlet-name>
        <servlet-class>br.com.upsale.servlets.ServletAtualizacaoProdutoSelecao</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAtualizacaoProdutoSelecao</servlet-name>
        <url-pattern>/selecao_atualizacao_produto</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ServletAtualizacaoProduto</servlet-name>
        <servlet-class>br.com.upsale.servlets.ServletAtualizacaoProduto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAtualizacaoProduto</servlet-name>
        <url-pattern>/atualizacao_produto</url-pattern>
    </servlet-mapping>
       
    <servlet>
        <servlet-name>ServletExclusaoProduto</servlet-name>
        <servlet-class>br.com.upsale.servlets.ServletExclusaoProduto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletExclusaoProduto</servlet-name>
        <url-pattern>/exclusao_produto</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ServletExclusaoEstoque</servlet-name>
        <servlet-class>br.com.upsale.servlets.ServletExclusaoEstoque</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletExclusaoEstoque</servlet-name>
        <url-pattern>/exclusao_estoque</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
